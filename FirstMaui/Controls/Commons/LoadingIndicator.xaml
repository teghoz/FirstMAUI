<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="FirstMaui.Controls.LoadingIndicator"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:FirstMaui.Controls"
    x:Name="Root"
    BackgroundColor="{Binding BackgroundColor, Source={x:Reference Root}}"
    IsVisible="False">

    <Border Padding="30,12" Stroke="Transparent">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="16" />
        </Border.StrokeShape>

        <VerticalStackLayout Spacing="6">
            <ActivityIndicator
                x:Name="actIndicator"
                HeightRequest="44"
                HorizontalOptions="Center"
                IsRunning="False"
                Scale="{OnPlatform iOS=1.3,
                                   Android=1.0}"
                WidthRequest="44"
                Color="{Binding IndicatorColor, Source={x:Reference Root}}" />

            <Label
                x:Name="lblLoadingText"
                FontSize="14"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                LineBreakMode="WordWrap"
                TextColor="{Binding LoadingTextColor, Source={x:Reference Root}}" />
        </VerticalStackLayout>
    </Border>

</ContentView>

