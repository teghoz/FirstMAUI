<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FirstMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FirstMaui"
    xmlns:pages="clr-namespace:FirstMaui.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="FirstMaui">

    <TabBar>
        <Tab Title="Main"
             Icon="dotnet_bot.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Schedule"
             Icon="dotnet_bot.svg">
            <ShellContent ContentTemplate="{DataTemplate pages:Schedule}" />
        </Tab>
    </TabBar>
    
    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->

</Shell>
