<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FirstMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FirstMaui"
    xmlns:pages="clr-namespace:FirstMaui.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="FirstMaui2">

    <TabBar>
        <Tab Title="Home"
             Icon="icon1.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Savings"
             Icon="icon2.png">
            <ShellContent ContentTemplate="{DataTemplate pages:SavingsPage}" />
        </Tab>
        <Tab Title="KidsBox"
             Icon="icon1.png">
            <ShellContent ContentTemplate="{DataTemplate pages:KidsboxPage}" />
        </Tab>
        <Tab Title="Transactions"
             Icon="icon2.png">
            <ShellContent ContentTemplate="{DataTemplate pages:TransactionsPage}" />
        </Tab>
        <Tab Title="Settings"
             Icon="icon2.png">
            <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}" />
        </Tab>
    </TabBar>
    
    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->

</Shell>
